<%= render :partial => "layouts/shared/sidebar" %>
<div class="column" id="content">
  <div class="ui ">
    <%= render :partial => "layouts/shared/notice" %>
    <div class="row">
      <h1 class="ui huge header">
        View Institution
      </h1>
    </div>
    <div class="ui divider"></div>
    <br />

    <div class="ui grid">
      <div class="sixteen wide column">
        <div class="ui attached message ">
          <div class="header">
            <%= @institution.name %>
          </div>
        </div>
        <div class="ui attached fluid segment">
          <strong>Contact:</strong>
          <%= @institution.contact %>
        </div>
        <div class="ui attached fluid segment">
          <strong>Location:</strong>
          <%= @institution.location %>
        </div>
      </div>
    </div>
    <br />
<% if current_user.admin? %>

  <%= link_to edit_institution_path(@institution), class: "ui primary basic labeled icon button" do %>
    <i class="pencil alternate icon"></i> Edit Institution
  <% end %>

<% end %>

<%= link_to institutions_path, class: "ui right  labeled icon button" do %>
  <i class="right arrow icon"></i>All Institutions
<% end %>


