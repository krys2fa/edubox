<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible" />
    <meta content="width=device-width, initial-scale=1, maximum-scale=2, user-scalable=no" name="viewport" />
    <meta content="PPType" name="author" />
    <meta content="#ffffff" name="theme-color" />
    <title>Edubox</title>

    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'default', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag    'pandoc-code-highlight', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>



<script>
$(document)
  .ready(function() {
    $('.ui.checkbox').checkbox();
    $('.ui.form')
      .form({
        fields: {
          email: {
            identifier  : 'email',
            rules: [
              {
                type   : 'empty',
                prompt : 'Please enter your e-mail'
              },
              {
                type   : 'email',
                prompt : 'Please enter a valid e-mail'
              }
            ]
          },
          password: {
            identifier  : 'password',
            rules: [
              {
                type   : 'empty',
                prompt : 'Please enter your password'
              },
              {
                type   : 'length[6]',
                prompt : 'Your password must be at least 6 characters'
              }
            ]
          }
        },
        inline: true,
        on: 'blur'
      })
    ;
  })
;
</script>

  </head>
  <body>
    <div class="ui center aligned grid">
      <div class="ui container">
        <h1 class="ui huge header">
          Please sign in
        </h1>

        <%= render 'layouts/shared/notice' %>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'ui large form'}) do |f| %>
          <div class="field">
                <div class="ui left icon input">
                  <i class="user icon"></i>
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail address" %>
                </div>
          </div>

          <div class="field">
            <div class="ui left icon input">
              <i class="lock icon"></i>
              <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field">
              <div class="ui checkbox">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            </div>
          <% end -%>

            <%= f.submit "Log in", :class => "ui fluid large primary submit button" %>

     <% end %>

    <%= render "devise/shared/links" %>


    </div>
  </div>




  <style type="text/css">
    body {
      background-color: #eee;
    }

    .ui.container {
      margin-top: 6em;
      max-width: 22em !important;
    }
  </style>

</body>
</html>





